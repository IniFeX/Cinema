<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
         http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1" id="data-fabric-web-tool">
    <servlet>
        <servlet-name>main-servlet</servlet-name>
        <servlet-class>org.example.MainServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>films-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Film.FilmsServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>directors-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Director.DirectorsServlet</servlet-class>
        <load-on-startup>3</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>actors-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Actor.ActorsServlet</servlet-class>
        <load-on-startup>4</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>film-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Film.FilmServlet</servlet-class>
        <load-on-startup>5</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>task-servlet</servlet-name>
        <servlet-class>org.example.Servlets.TaskServlet</servlet-class>
        <load-on-startup>6</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>actor-director-servlet</servlet-name>
        <servlet-class>org.example.Servlets.TaskServlet</servlet-class>
        <load-on-startup>7</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>auth-servlet</servlet-name>
        <servlet-class>org.example.Servlets.User.AuthServlet</servlet-class>
        <load-on-startup>8</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>profile-servlet</servlet-name>
        <servlet-class>org.example.Servlets.User.ProfileServlet</servlet-class>
        <load-on-startup>9</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>register-servlet</servlet-name>
        <servlet-class>org.example.Servlets.User.RegisterServlet</servlet-class>
        <load-on-startup>10</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>redact-user-servlet</servlet-name>
        <servlet-class>org.example.Servlets.User.RedactUserServlet</servlet-class>
        <load-on-startup>11</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>create-film-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Film.CreateFilmServlet</servlet-class>
        <load-on-startup>12</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>director-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Director.DirectorServlet</servlet-class>
        <load-on-startup>13</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>create-director-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Director.CreateDirectorServlet</servlet-class>
        <load-on-startup>14</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>redact-director-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Director.RedactDirectorServlet</servlet-class>
        <load-on-startup>15</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>redact-actor-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Actor.RedactActorServlet</servlet-class>
        <load-on-startup>16</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>actor-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Actor.ActorServlet</servlet-class>
        <load-on-startup>17</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>create-actor-servlet</servlet-name>
        <servlet-class>org.example.Servlets.Actor.CreateActorServlet</servlet-class>
        <load-on-startup>18</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>main-servlet</servlet-name>
        <url-pattern>/main-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>films-servlet</servlet-name>
        <url-pattern>/films-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>directors-servlet</servlet-name>
        <url-pattern>/directors-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actors-servlet</servlet-name>
        <url-pattern>/actors-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>film-servlet</servlet-name>
        <url-pattern>/film-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actor-director-servlet</servlet-name>
        <url-pattern>/actor-director-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>task-servlet</servlet-name>
        <url-pattern>/task-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>auth-servlet</servlet-name>
        <url-pattern>/auth-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>profile-servlet</servlet-name>
        <url-pattern>/profile-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>register-servlet</servlet-name>
        <url-pattern>/register-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redact-user-servlet</servlet-name>
        <url-pattern>/redact-user-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create-film-servlet</servlet-name>
        <url-pattern>/create-film-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>director-servlet</servlet-name>
        <url-pattern>/director-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create-director-servlet</servlet-name>
        <url-pattern>/create-director-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redact-director-servlet</servlet-name>
        <url-pattern>/redact-director-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>actor-servlet</servlet-name>
        <url-pattern>/actor-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>create-actor-servlet</servlet-name>
        <url-pattern>/create-actor-servlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>redact-actor-servlet</servlet-name>
        <url-pattern>/redact-actor-servlet</url-pattern>
    </servlet-mapping>



    <filter>
        <filter-name>auth-filter</filter-name>
        <filter-class>org.example.Filters.AuthFilter</filter-class>
    </filter>
    <filter>
        <filter-name>hidden-filter</filter-name>
        <filter-class>org.example.Filters.HiddenHttpMethodFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>auth-filter</filter-name>
        <url-pattern>/auth-filter</url-pattern>
    </filter-mapping>
    <filter-mapping>
        <filter-name>hidden-filter</filter-name>
        <url-pattern>/hidden-filter</url-pattern>
    </filter-mapping>
</web-app>